<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.github.minhnguyen31093.emojitextview.EmojiTextView
        android:id="@+id/mn_mainActivity_txtEmoji"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/mn_mainActivity_lnlEmoji" />

    <LinearLayout
        android:id="@+id/mn_mainActivity_lnlEmoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/mn_mainActivity_btnNotiEmoji"
        android:orientation="horizontal"
        android:weightSum="10">

        <EditText
            android:id="@+id/mn_mainActivity_edtEmoji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="7.5"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/mn_mainActivity_btnEmoji"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2.5"
            android:text="@string/submit" />
    </LinearLayout>

    <Button
        android:id="@+id/mn_mainActivity_btnNotiEmoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/noti" />
</RelativeLayout>